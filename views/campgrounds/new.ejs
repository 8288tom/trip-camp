<% layout("layouts/boilerplate")%>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    Looks Amazing!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" name="campground[price]" id="price" placeholder="0.0" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"
                    required></textarea>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Upload Image(s)</label>
                <input class="form-control form-control-sm" type="file" id="formFileMultiple" name="image" multiple>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add a Campground</button>
            </div>
            <a href="/campgrounds">All Campgrounds</a>
        </form>

    </div>
</div>

<script src="/javascripts/validateImages.js"></script>